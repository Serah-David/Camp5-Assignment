@using MVCAssignmentsOne.Models
@model IEnumerable<Patient>

<h2 class="mb-3">Patient List</h2>

<!-- Add New Patient Button -->
<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">
     Add New Patient
    </a>
</div>

<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>Registration No</th>
            <th>Patient Name</th>
            <th>DOB</th>
            <th>Gender</th>
            <th>Address</th>
            <th>Phone No</th>
            <th>Membership</th>
            <th>Insured Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.RegistrationNo</td>
                <td>@p.PatientName</td>
                <td>@p.Dob.ToString("yyyy-MM-dd")</td>
                <td>@p.Gender</td>
                <td>@p.Address</td>
                <td>@p.PhoneNo</td>
                <td>@p.Membership?.MembershipDesc</td>
                <td>@p.Membership?.InsuredAmount</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.PatientId" class="btn btn-sm btn-primary me-1">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@p.PatientId" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
