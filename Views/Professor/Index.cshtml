@model List<Professor>

@{
    ViewData["Title"] = "Professors List";
}


<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">
        @ViewData["Title"]
    </h2>

    <div class="card shadow-lg border-0">
        <div class="card-body">
            <div class="mb-3">
                <a asp-action="Create" class="btn btn-success">
                    Add New Professor
                </a>
            </div>
            <table class="table table-bordered table-striped table-hover align-middle">
                <thead class="table-dark text-center">
                    <tr>
                        <th>Professor ID</th>
                        <th >Manager ID</th>
                        <th >First Name</th>
                        <th >Last Name</th>
                        <th >Department</th>
                        <th >Location</th>
                        <th >Salary</th>
                        <th >Joining Date</th>
                        <th>Date of Birth</th>
                        <th>Gender</th>
                        <th >Actions</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var p in Model)
                        {
                            <tr>
                                <td>@p.ProfessorId</td>
                                <td>@p.ManagerId</td>
                                <td>@p.FirstName</td>
                                <td>@p.LastName</td>
                                <td>@p.Department?.DeptName</td>
                                <td>@p.Department?.Location</td>
                                <td>@p.Salary?.ToString("C")</td>
                                <td>@p.JoiningDate?.ToShortDateString()</td>
                                <td>@p.DateOfBirth?.ToShortDateString()</td>
                                <td>@p.Gender</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@p.ProfessorId" class="btn btn-sm btn-warning me-1">
                                       Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@p.ProfessorId" class="btn btn-sm btn-danger"
                                       onclick="return confirm('Are you sure you want to delete this professor?');">
                                         Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="11" class="text-danger fw-bold">No professors found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
