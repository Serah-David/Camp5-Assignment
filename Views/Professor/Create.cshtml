@model MVCAssignmentTwo.Models.Professor

<h2>Add Professor</h2>


<form asp-action="Create" id="CreatePatientForm" method="post">
    <div class="form-group">
        <label asp-for="ManagerId">Manager ID </label>
        <input asp-for="ManagerId" type="number" class="form-control" placeholder="Enter Manager ID if any" />
        <span asp-validation-for="ManagerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Salary"></label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="JoiningDate"></label>
        <input asp-for="JoiningDate" type="date" class="form-control" />
    </div>
     
    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Gender"></label>
        <select asp-for="Gender" class="form-control">
            <option value="">-- Select Gender --</option>
            <option>Male</option>
            <option>Female</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="DeptNo">Department</label>
        <select asp-for="DeptNo" asp-items="@(new SelectList(ViewBag.Departments, "DeptNo", "DeptName"))" class="form-control">
            <option value="">-- Select Department --</option>
        </select>

    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
